<li id="grid-<%= grid.id %>">
  <%= link_to gravatar_for(grid.user, size: 50), grid.user %>
  <span class="user"><%= link_to grid.user.name, grid.user %></span>
  <span class="content">
    <%= grid.title %>
    <%= image_tag grid.picture.url if grid.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(grid.created_at) %> ago.
    <% if current_user?(grid.user) %>
      <%= link_to "delete", grid, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
